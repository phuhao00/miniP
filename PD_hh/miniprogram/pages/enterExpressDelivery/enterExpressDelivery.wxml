<!--pages/enterExpressDelivery/enterExpressDelivery.wxml-->
<van-cell-group>
 <van-field
    value="{{ message }}"
    label="{{headTitle}}"
    type="textarea"
    placeholder="请输入描述信息"
    autosize
    border="{{ false }}"
  />
   <van-field
    value="{{ username }}"
    label="昵称"
    placeholder="请输入昵称"
    error
  />
  <van-field
    value="{{ phone }}"
    label="手机号"
    placeholder="请输入手机号"
    error-message="手机号格式错误"
    border="{{ false }}"
  />
   <van-field
    value="{{ price }}"
    label="价格"
    placeholder="请输入价格"
    border="{{ false }}"
  />
  <van-field size="large">
    <van-button slot="button" size="big" type="primary" style='padding-left: 4rpx;' >提交</van-button>
  </van-field>
</van-cell-group>
